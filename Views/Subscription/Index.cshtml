@model IEnumerable<Books.Models.Subscription>

@{ 
    ViewData["Title"] = "Subscription Page";
}

    <div class="my-3 p-3 bg-white rounded shadow-sm">
        <h6 class="border-bottom border-gray pb-2 mb-0 text-center">Subscription PLan List</h6>
        @foreach (var item in Model)
        {
            <div class="media text-muted pt-3">
                <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"></rect><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
                <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <strong class="text-gray-dark">@item.name</strong>
                        <form asp-action="unsubscribe" asp-controller="Subscription" method="post">
                            <input value="@item.planId" type="hidden" class="form-control" name="planId" />
                            <button class="nav-link btn btn-link py-0" type="submit" style="width:auto">
                                Unsubscribe
                            </button>
                        </form>
                    </div>
                    <span class="d-block"></span>
                    <div>
                        <span class="d-block"><strong>Amount:</strong>R @item.price</span>
                    </div>
                    <span class="d-block"></span>
                    <div>
                        <span class="d-block"><strong>Subscribe at:</strong> @item.Created_at</span>
                    </div>
                    <span class="d-block"></span>
                    <div>
                        <span class="d-block"><strong>End at:</strong> @item.End_at</span>
                    </div>

                </div>
            </div>
        }


        <small class="d-block text-right mt-3">

        </small>
    </div>
